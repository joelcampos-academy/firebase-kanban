rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Escribimos aqu√≠ nuestras reglas de seguridad

      match /departments/{imageId} {
        // Indicamos que se debe estar autenticado y que se deben sucbir ficheros de menos de 100MB
        allow write: if request.auth != null && resource.size <  100 * 1024 * 1024;
        allow read: if request.auth != null;
      }
    }
  }
}
